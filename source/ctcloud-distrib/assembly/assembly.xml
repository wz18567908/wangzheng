<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
                        http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>

        <!-- DLC module -->
        <moduleSet>
            <!-- Enable access to all projects in the current multimodule build! -->
            <useAllReactorProjects>true</useAllReactorProjects>

            <!-- Now, select which projects to include in this module-set. -->
            <includes>
                <include>com.clustertech.cloud:ctcloud-dlc</include>
            </includes>
            <sources>
                <includeModuleDirectory>false</includeModuleDirectory>
                <fileSets>
                    <fileSet>
                        <directory>src/main/bin</directory>
                        <outputDirectory>/dlc/bin</outputDirectory>
                    </fileSet>
                    <fileSet>
                        <directory>src/main/etc</directory>
                        <outputDirectory>/dlc/etc</outputDirectory>
                    </fileSet>
                    <fileSet>
                        <directory>src/main/conf</directory>
                        <outputDirectory>/dlc/conf</outputDirectory>
                    </fileSet>
                </fileSets>
            </sources>
            <binaries>
                <outputDirectory>/dlc/lib</outputDirectory>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>/dlc/lib</outputDirectory>
                        <scope>runtime</scope>
                        <unpack>false</unpack>
                    </dependencySet>
                </dependencySets>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>

        <!-- Dbconfig module -->
        <moduleSet>
            <!-- Enable access to all projects in the current multimodule build! -->
            <useAllReactorProjects>true</useAllReactorProjects>

            <!-- Now, select which projects to include in this module-set. -->
            <includes>
                <include>com.clustertech.cloud:ctcloud-dbconfig</include>
            </includes>
            <sources>
                <includeModuleDirectory>false</includeModuleDirectory>
                <fileSets>
                    <fileSet>
                        <directory>src/main/bin</directory>
                        <outputDirectory>/dbconfig/bin</outputDirectory>
                    </fileSet>
                    <fileSet>
                        <directory>src/main/conf</directory>
                        <outputDirectory>/dbconfig/conf</outputDirectory>
                    </fileSet>
                    <fileSet>
                        <directory>src/main/resources</directory>
                        <outputDirectory>/dbconfig/conf</outputDirectory>
                        <includes>
                            <include>log4j.properties</include>
                        </includes>
                    </fileSet>
                    <fileSet>
                        <directory>src/main/etc</directory>
                        <outputDirectory>/dbconfig/etc</outputDirectory>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>

        <!-- JNI module -->
        <moduleSet>
            <!-- Enable access to all projects in the current multimodule build! -->
            <useAllReactorProjects>true</useAllReactorProjects>

            <!-- Now, select which projects to include in this module-set. -->
            <includes>
                <include>com.clustertech.cloud:ctcloud-jni</include>
            </includes>
            <sources>
                <includeModuleDirectory>false</includeModuleDirectory>
                <fileSets>
                    <fileSet>
                        <directory>src/main/jni/lsf</directory>
                        <outputDirectory>/jni/lib64</outputDirectory>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>
    </moduleSets>
</assembly>
